{
     "agent": {
         "run_as_user": "root"
     },
     "logs": {
         "logs_collected": {
             "files": {
                 "collect_list": [
                     {
                         "file_path": "/var/log/syslog",
                         "log_group_name": "/aws/ec2-ubuntu/syslog",
                         "log_stream_name": "{instance_id}"
                     }
                 ]
             }
         }
     }
}
